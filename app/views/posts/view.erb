<h2>Welcome to Chitter</h2>

<% if current_user %>
  <form action='/posts/new' method 'get'>
    <input type="submit" value="Make a Cheep">
  </form>
<% end %>

<br><br><br>

<h4>Recent Cheeps:</h4>


<div id='cheeps'>
  <% @cheeps.reverse.each do |cheep| %>
      Posted by <%= cheep.user.name %> (<%= cheep.user.username%>, <%= cheep.created %>)<br>
      <%= cheep.message %>
      <br><br>
  <% end %>
</div>